generator client {
    provider   = "prisma-client-js"
    engineType = "binary"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Customer {
    id                String    @id @default(auto()) @map("_id") @db.ObjectId
    email             String    @unique
    name              String?
    phone             String?
    updatedManuallyAt DateTime?
    createdAt         DateTime  @default(now())
    updatedAt         DateTime  @updatedAt
}

model ImportState {
    id                   String    @id @default(auto()) @map("_id") @db.ObjectId
    status               String
    processedRows        Int
    totalRows            Int
    recentCustomerEmails String[]
    startedAt            DateTime?
    updatedAt            DateTime  @updatedAt
}
