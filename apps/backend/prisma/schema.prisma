generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
}

model Customer {
    id                String    @id @default(auto()) @map("_id") @db.ObjectId
    email             String    @unique
    name              String?
    phone             String?
    updatedManuallyAt DateTime?
    createdAt         DateTime  @default(now())
    updatedAt         DateTime  @updatedAt
}

model ImportState {
    id                String    @id @default(auto()) @map("_id") @db.ObjectId
    status            String
    processedRows     Int
    totalRows         Int
    recentCustomerIds String[]
    startedAt         DateTime?
    updatedAt         DateTime  @updatedAt
}
