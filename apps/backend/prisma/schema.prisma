generator client {
    provider   = "prisma-client-js"
    engineType = "binary"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

enum ImportStatus {
    IDLE
    RUNNING
    INTERRUPTED
    COMPLETED
    FAILED
}

model Customer {
    id                String    @id @default(auto()) @map("_id") @db.ObjectId
    email             String    @unique
    name              String?
    phone             String?
    updatedManuallyAt DateTime?
    createdAt         DateTime  @default(now())
    updatedAt         DateTime  @updatedAt
}

model ImportState {
    id                   String    @id @default(auto()) @map("_id") @db.ObjectId
    status               ImportStatus @default(IDLE)
    processedRows        Int
    lastProcessedRow     Int
    recentCustomerEmails String[]
    totalRows            Int
    startedAt            DateTime?
    updatedAt            DateTime  @updatedAt
    errorMessage         String?
}
