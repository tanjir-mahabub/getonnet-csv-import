generator client {
    provider   = "prisma-client-js"
    engineType = "binary"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

enum ImportStatus {
    IDLE
    RUNNING
    INTERRUPTED
    COMPLETED
    FAILED
}

model Customer {
    id                String    @id @default(auto()) @map("_id") @db.ObjectId
    email             String    @unique
    name              String?
    phone             String?
    updatedManuallyAt DateTime?
    createdAt         DateTime  @default(now())
    updatedAt         DateTime  @updatedAt
}

model ImportState {
  id                  String       @id @default(auto()) @map("_id") @db.ObjectId
  status              ImportStatus
  processedRows       Int
  skippedRows         Int           @default(0)
  lastProcessedRow    Int
  totalRows           Int
  startedAt           DateTime?
  completedAt         DateTime?
  updatedAt           DateTime      @updatedAt
  errorMessage        String?
  recentCustomerEmails String[]
}